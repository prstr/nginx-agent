{
  "env": {
    "node": true,
    "browser": false
  },
  "rules": {
    "indent": [2, 2],
    "quotes": [2, "single"],
    "no-mixed-requires": 0,
    "curly": 0,
    "no-process-exit": 0,
    "eqeqeq": 0,
    "no-shadow": 0,
    "no-underscore-dangle": 0,
    "no-multiple-empty-lines": [ 2, {
      "max": 2
    }],
    "space-before-function-paren": [ 2, {
      "anonymous": "always",
      "named": "never"
    }],
    "no-use-before-define": [ 2, "nofunc" ]
  }
}
